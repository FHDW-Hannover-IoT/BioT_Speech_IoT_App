<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header">

        <TextView
            android:id="@+id/headerText"
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_height="80dp"
            android:background="@color/header"
            android:gravity="center_vertical|center_horizontal"
            android:paddingStart="40dp"
            android:text="Sensordaten"
            android:textColor="@color/text"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/notification_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/outline_circle_notifications_24"
            android:background="@color/header"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:paddingBottom="15dp"
            android:color="@color/text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Von: "
                android:textColor="@color/text"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text=""
                android:textSize="10dp"
                android:textColor="@color/background"
                android:backgroundTint="@color/button"
                android:id="@+id/button_Accel_von"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bis: "
                android:textColor="@color/text"
                android:layout_marginStart="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text=""
                android:textSize="10sp"
                android:textColor="@color/background"
                android:backgroundTint="@color/button"
                android:id="@+id/button_Accel_bis"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_reset_focus_24"
                android:background="@color/background"
                android:layout_marginStart="10dp"
                android:paddingTop="3dp"
                android:id="@+id/resetAccel"
                />

        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartAccel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x-Achse"
                android:textColor="@color/text"
                android:id="@+id/AccelxCheck"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y-Achse"
                android:textColor="@color/text"
                android:id="@+id/AccelyCheck"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z-Achse"
                android:textColor="@color/text"
                android:id="@+id/AccelzCheck"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summe"
                android:textColor="@color/text"
                android:id="@+id/AccelSumCheck"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Von: "
                android:textColor="@color/text"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text=""
                android:textSize="10dp"
                android:textColor="@color/background"
                android:backgroundTint="@color/button"
                android:id="@+id/button_Gyro_von"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bis: "
                android:textColor="@color/text"
                android:layout_marginStart="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text=""
                android:textSize="10dp"
                android:textColor="@color/background"
                android:backgroundTint="@color/button"
                android:id="@+id/button_Gyro_bis"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_reset_focus_24"
                android:background="@color/background"
                android:layout_marginStart="10dp"
                android:paddingTop="3dp"
                android:id="@+id/resetGyro"
                />

        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartGyro"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x-Achse"
                android:textColor="@color/text"
                android:id="@+id/GyroxCheck"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y-Achse"
                android:textColor="@color/text"
                android:id="@+id/GyroyCheck"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z-Achse"
                android:textColor="@color/text"
                android:id="@+id/GyrozCheck"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summe"
                android:textColor="@color/text"
                android:id="@+id/GyroSumCheck"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Von: "
                android:textColor="@color/text"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text=""
                android:textSize="10dp"
                android:textColor="@color/background"
                android:backgroundTint="@color/button"
                android:id="@+id/button_Mag_von"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bis: "
                android:textColor="@color/text"
                android:layout_marginStart="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text=""
                android:textSize="10dp"
                android:textColor="@color/background"
                android:backgroundTint="@color/button"
                android:id="@+id/button_Mag_bis"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_reset_focus_24"
                android:background="@color/background"
                android:layout_marginStart="10dp"
                android:paddingTop="3dp"
                android:id="@+id/resetMagnet"
                />

        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartMag"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x-Achse"
                android:textColor="@color/text"
                android:id="@+id/MagxCheck"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y-Achse"
                android:textColor="@color/text"
                android:id="@+id/MagyCheck"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z-Achse"
                android:textColor="@color/text"
                android:id="@+id/MagzCheck"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summe"
                android:textColor="@color/text"
                android:id="@+id/MagSumCheck"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Zur Werteansicht"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/button"
            android:textColor="@color/background"
            android:id="@+id/werteansicht"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footerBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/header">

        <Button
            android:id="@+id/btnAccel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Accel"
            android:textColor="@color/background"
            android:layout_margin="4dp"
            android:backgroundTint="@color/button"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnGyro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gyroskop"
            android:textColor="@color/background"
            android:layout_margin="4dp"
            android:backgroundTint="@color/button"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btnMagnet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Magnetfeld"
            android:textColor="@color/background"
            android:layout_margin="4dp"
            android:backgroundTint="@color/button"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>
